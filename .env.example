# Root environment template for Dockerless local setup.
# Copy needed blocks into each service's .env file.

# =========================
# SERVER (server/.env)
# =========================
DJANGO_SECRET_KEY=replace-me
DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
ACCESS_TOKEN_MINUTES=15
REFRESH_TOKEN_DAYS=7
ACCESS_COOKIE_NAME=access_token
REFRESH_COOKIE_NAME=refresh_token
JWT_COOKIE_SECURE=false
JWT_COOKIE_SAMESITE=Lax
JWT_COOKIE_DOMAIN=
USE_SQLITE=1
POSTGRES_DB=crm_server
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
CORS_ALLOWED_ORIGINS=http://localhost:3000
SERVICE_TOKEN_BOT1_HASH=
SERVICE_TOKEN_BOT2_HASH=

# Production security (enable on HTTPS infra)
USE_X_FORWARDED_HOST=true
SECURE_PROXY_SSL_HEADER_ENABLED=true
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_HSTS_PRELOAD=true
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin

# =========================
# DASHBOARD (dashboard/.env)
# =========================
NEXT_PUBLIC_API_URL=http://localhost:8000

# =========================
# BOT1 (bot1_service/.env)
# =========================
BOT1_BOT_TOKEN=123456:telegram-bot-token
BOT1_SERVER_BASE_URL=http://localhost:8000/api/v1
BOT1_SERVICE_TOKEN=raw-bot1-service-token
BOT1_DASHBOARD_EMAIL=admin@example.com
BOT1_DASHBOARD_PASSWORD=pass1234
BOT1_DEFAULT_LANGUAGE=uz
BOT1_CATALOG_CACHE_TTL=900

# =========================
# BOT2 (bot2_service/.env)
# =========================
BOT2_BOT_TOKEN=123456:telegram-bot-token
BOT2_SERVER_BASE_URL=http://localhost:8000/api/v1
BOT2_SERVICE_TOKEN=raw-bot2-service-token
BOT2_DASHBOARD_EMAIL=
BOT2_DASHBOARD_PASSWORD=
BOT2_DEFAULT_LANGUAGE=uz
